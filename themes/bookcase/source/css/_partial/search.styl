.sidebar .search {
	position: relative;
	height: 40px;
	margin: 0;
	border-bottom: 1px solid var(--color-border);
	border-radius: 0;
	background-color: transparent;
}

.sidebar .search .search-input {
	width: 100%;
    height: 100%;
    opacity: 1;
    padding-left: 16px;
    box-sizing: border-box;
    border: none;
    outline: none;
    background-color: transparent;
    transition: width 0.3s ease-out;
}

.sidebar .search .search-input-close {
	border: none;
	position: absolute;
	top: 14px;
	right: 10px;
	opacity: 0;
}

.sidebar .search .search-input.searching {
	width: 90%;
}

.sidebar .search .search-input-close.searching {
	opacity: 1;
}

.sidebar .search-content.close {
	opacity: 0;
	height: 0;
}

.sidebar .search-content {
	opacity: 1;
	width: 100%;
	height: auto;
	position: absolute;
	background: var(--color-background);
	top: 41px;
	bottom: 0;
	z-index: 100;
	overflow: auto;
}

.sidebar .search-content .search-result {
	margin-top: 20px;

	.search-result-title {
		text-align: center;
	}
	.search-result-items {
		margin-top: 10px;
		padding-left:0;
		li {
			margin: 10px 0;
		    padding: 10px;
		    border-bottom: 1px solid var(--color-border);
			list-style:none;
		}
	}
	.search-result-item {
	    text-align: left;
	    font-size: 16px;
	}
    .search-result-keyword {
    	color: var(--color-search-result-keyword);
    	font-style: normal;
    	font-weight: bold;
    }

    .search-result-match-content {
    	margin-top: 15px;
    	text-align: left;
    	color: var(--color-search-result-match-content);
		font-size: 12px;
    }
}